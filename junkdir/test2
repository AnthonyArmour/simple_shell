#include "shell.h"

int main(void)
{
	int x = 0, xx = 0;
	char *buf;
	char *string = "Hello", *string2 = "Sam";

	buf = malloc(6);
	for (; string[x]; x++)
		buf[x] = string[x];
	buf[x] = string[x];
	printf("%s\n", buf);
	buf = _realloc(buf, strlen(buf), strlen(buf) + 4);
	printf("%s\n", buf);
	for (xx = 0; xx < 4; xx++)
		buf[x] = string2[xx], x++;
	buf[x] = '\0';
	printf("%s\n", buf);
	return (0);
}
